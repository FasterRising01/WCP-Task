<%= notice %>
<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>title</th>
			<th>body</th>
		</tr>
	</thead>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "show", book_path(book) %></td>
			<td><%= link_to "edit", edit_book_path(book) %></td>
			<td><%= link_to "destroy", book, method: :delete, data: { confirm: "Are you sure?"} %></td>
		</tr>
		<%end%>
	<tbody>
	</tbody>
</table>
<h1>New book</h1>
<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book) do |t| %>
	<h4>title</h4>
	<%= t.text_field :title %>

	<h4>body</h4>
	<%= t.text_area :body %>

	<%= t.submit "Create Book" %>
<% end %>