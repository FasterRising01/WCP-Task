<%= render "books/header", books: @user %>
<div class="container pl-15 pr-15">
<p id="notice"><%= notice %></p>
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h1>Editing Book</h1>

			<% if @book.errors.any? %>
		  <div id="error_explanation" class="alert alert-danger">
		    <ul>
		    	<%= @book.errors.count %>errors prohibited this obj from being saved:
		      <% @book.errors.full_messages.each do |message| %>
		        <li><%= message %></li>
		      <% end %>
		    </ul>
		  </div>
		<% end %>

			<%= form_for(@book) do |books| %>
			<h4>Title</h4>
			<%= books.text_field :title, class: "col-xs-12" %>
			<h4>Opinion</h4>
			<%= books.text_area :body, class: "col-xs-12" %>
			<%= books.submit "Update Book", class: "btn btn-primary col-xs-12" %>
			<% end %>
			<%= link_to "Show", book_path(@book.id) %>|
			<%= link_to "Back", books_path %>
		</div>
	</div>
</div>
<%= render "books/footer" %>
