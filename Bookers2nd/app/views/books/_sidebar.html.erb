
<div class="col-xs-3">
	<h3>User info</h3>
	<%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "100x100" %>
		<table class="table">
			<tbody>
				<tr>
					<th>name</th>
					<th><%= user.name %></th>
				</tr>
				<tr>
					<th>introduction</th>
					<th><%= user.introduction %></th>
				</tr>
			</tbody>
		</table>
		<div class="row">
			<div class="col-xs-12 btn btn-default ">
				<%= link_to "", edit_user_path(user.id), class: "glyphicon glyphicon-wrench" %>
			</div>
		</div>
		<h2>New book</h2>
		<!-- form_for部分 -->
		<%= form_for(book) do |f| %>
			<div class="field row">
				<label for="book_title">Title</label>
				<%= f.text_field :title, class: "col-xs-12" %>
			</div>
			<div class="field row">
				<h4>Opinion</h4>
				<%= f.text_area :body, class: "col-xs-12" %>
			</div>
			<div class="actions row">
				<br><%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %></br>
			</div>
		<% end %>
</div>