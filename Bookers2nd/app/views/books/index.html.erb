<%= render "books/header", books: @user %>
	<div class="container pl-15 pr-15">
		<% if @book.errors.any? %>
		    <div id="error_explanation" class="alert alert-danger">
			    <ul> 
			    	<%= @book.errors.count %>errors prohibited this obj from being saved:
			      	<% @book.errors.full_messages.each do |message| %>
			        <li><%= message %></li>
			      <% end %>
			    </ul>
			</div>
		<% end %>



	<p id="notice"><%= notice %></p>
		<div class="row">
			<%= render "books/sidebar", book: @book,user: @user %>
			<h3>Books</h3>
			<div class="col-xs-9">
				<table class="table table-striped ">
					<thead>
						<tr>
							<th></th>
							<th>title</th>
							<th>opinion</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% @books.each do |t| %>
						<tr>
							<td>
								<%= link_to user_path(t.user.id) do %>
									<%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "50x50" %>
								<%end%>
							</td>
							<td>
								<%= link_to t.title, book_path(t.id) %>
							</td>
							<td><%= t.body %></td>
							<td></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>

		</div>
	</div>
<%= render "books/footer" %>
