<%= render "books/header", books: @user %>

<div class="container pl-15 pr-15">
	<p id="notice"><%= notice %></p>
	<div class="row">
		<%= render "books/sidebar", book: @book_new, user: @user %>
		<h2>Book detail</h2>
		<div class="col-xs-9">
			<table class="table table-striped ">
				<thead>
					<tr>
						<th></th>
						<th></th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>
							<%= link_to(user_path(@book.user.id)) do |user| %>
								<%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "100x100" %>
								<br><%= @book.user.name %>
							<% end %>
						</td>
						<td>
							<%= link_to @book.title, book_path(@book.id) %>
						</td>
						<td><%= @book.body %></td>
						<% if @book.user == current_user %>
						<td ><%= link_to "Edit", edit_book_path(@book.id), class: "btn-sm btn-success" %></td>
						<td> <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm"=> "Are You Sure?", class: "btn-sm btn-danger" %> </td>
						<%end%>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>
<%= render "books/footer" %>