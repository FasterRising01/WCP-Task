<%= render "books/header", books: @user %>
	<div class="container pl-15 pr-15">
		<p id="notice"><%= notice %></p>
		<div class="row">
			<%= render "books/sidebar", book: @book,user: @user %>
			<div class="col-xs-9">
				<h2>Books</h2>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th></th>
							<th>title</th>
							<th>opinion</th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
						<% @post.each do |t| %>
						<tr>
							<td>
								<%= link_to user_path do %>
									<%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "50x50" %>
								<%end%>
							</td>
							<td>
								<%= link_to t.title, book_path(t.id) %>
							</td>
							<td><%= t.body %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
<%= render "books/footer" %>