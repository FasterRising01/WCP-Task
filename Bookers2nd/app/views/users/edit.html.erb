<%= render "books/header", books: @user %>
<div class="container pl-15 pr-15">
<p id="notice"><%= notice %></p>
<h2>User info</h2>

<% if @user.errors.any? %>
		    <div id="error_explanation" class="alert alert-danger">
			    <ul>
			    	<%= @user.errors.count %>errors prohibited this obj from being saved:
			      	<% @user.errors.full_messages.each do |message| %>
			        <li><%= message %></li>
			      <% end %>
			    </ul>
			</div>
		<% end %>

	<%= form_for(@user, url:user_path) do |f| %>
		<div class="form-group has-icon">
			<label class="control-label sr-only" for="inputEmail">Name</label>
			<%= f.text_field :name, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "Name" %>
			<span class="fa fa-user form-control-icon" aria-hidden="true"></span>
			<%= f.attachment_field :profile_image %>
			<!--<span class="fa fa-building form-control-icon" aria-hidden="true"></span> -->
			<%= f.text_area :introduction, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "Introduction" %>
		</div>
		<%= f.submit "Update User"  %>
	<%end%>
</div>
<%= render "books/footer" %>